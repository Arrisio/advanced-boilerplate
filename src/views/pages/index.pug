extends ../auth.layout.pug

block content
  .parallax#parallax
    - for (var i = 9; i > 0; i--)
      .parallax__layer
        img(src=`/assets/images/parallax/${i}.png`).parallax__image
  .auth
    .auth__container
      a(href="").bordered-btn.auth__btn#auth-btn Авторизоваться
      .auth__form
        .auth__forms-container
          .auth__form-item.auth__form-face
            .modal-form
              .user.auth__user
                .user__pic-container
                  .user__pic
                    +image('content/user.jpg', 'user pic', 'user__pic-img')
                .user__info
                  .user__name Владимир Астахов
                  .user__desk Личный сайт веб-разработчика
                .auth__socials
                  +socials('socials_fill_green')
              .modal-form__buttons
                button.modal-form__button Мои работы
                button.modal-form__button Обо мне
                button.modal-form__button Блог

          .auth__form-item.auth__form-back
            .modal-form
              .modal-form__title
                .subtitle Авторизуйтесь
              .modal-from__container
                #auth-component

    .auth__footer
      .auth__disclamer © Владимир Астахов | создано с любовью в LoftSchool | 2018
